    <div class="cards">

    <div class="container">
        <fieldset>
          <form action="/" method="post">
            <input name="city" type="text" class="ghost-input" placeholder="Enter a City" required>
            <input type="submit" class="ghost-button" value="Get Weather">
          </form>
          <div>{{weather}}</div>
        </fieldset>
      </div>



    </div>

    <div class="cards2">
      <div class="container">
        <div class="row">
            <h3>Notes</h3>
            <ul>
              {{#each notes}}
              {{#unless this.devoured}}
              <li class="note-list">{{this.notes_name}}
                <button type="button" class="btn btn-primary devour-btn" data-id="{{id}}">Finished!</button>
              </li>
              {{/unless}}
              {{/each}}
            </ul>
        </div>

        <div class="submit-row">
            <h4>Create a note</h4>
            <form action="/notes" method="POST">
              <input type="text" id="name" name="notes_name" placeholder="">
              <button type="submit" class="btn btn-danger">Add</button>
            </form>
          </div>
        </div>
      </div>

      <div class="cards3"></div>
   
